<%= form_with(model: data_dictionary_field) do |form| %>
  <% if data_dictionary_field.errors.any? %>
        <div class="alert alert-danger">
      <h5>Corregir lo siguiente antes de guardar:</h5>
      <ul>
        <% data_dictionary_field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :field_name, style: "display: block" %>
    <%= form.text_field :field_name, class: "form-control" %>
  </div>
   <hr style="border:none">
  <div class="form-group">
    <%= form.label :field_type_id, style: "display: block" %>
    <%= form.collection_select :field_type_id, FieldType.all, :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>
   <hr style="border:none">
  <div class="form-group">
    <%= form.label :field_description, style: "display: block" %>    
    <%= form.text_area :field_description, rows: 5, cols: 40, class: "form-control" %>
  </div>

  <div>    
    <%= form.hidden_field :data_dictionary_id %>
  </div>
  <hr style="border:none">
  <div class="text-right">
    <%= form.submit t("Save"), class: "btn btn-success" %>
  </div>
<% end %>
